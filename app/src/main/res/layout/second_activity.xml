<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gmfre.whatsapp.MainActivity">
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/Cancelar"
        android:text="Cancelar"
        android:textSize="30dp" />
    <Button
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:id="@+id/Guardar"
        android:text="Guardar"
        android:textSize="30dp"
        android:layout_toRightOf="@id/Cancelar" />
   <ImageButton
       android:layout_width="55dp"
       android:layout_height="55dp"
       android:id="@+id/Nova_Imagem"
       android:layout_below="@id/Cancelar" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Nome"
        android:hint="Nome"
        android:textSize="30dp"
        android:maxLines="1"
        android:layout_toRightOf="@id/Nova_Imagem"
        android:layout_below="@id/Cancelar" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Numero"
        android:hint="Numero"
        android:textSize="30dp"
        android:maxLines="1"
        android:layout_below="@id/Nome"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Email"
        android:hint="Email"
        android:textSize="30dp"
        android:layout_below="@id/Numero"
        android:maxLines="1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Anotacoes"
        android:hint="Anotações"
        android:textSize="30dp"
        android:layout_below="@id/Email"
        android:maxLines="3" />
    </RelativeLayout>